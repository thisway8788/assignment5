<main class="signup-main">
    <form action="/signup" method="POST" class="signup-form">
        <h1>Sign Up</h1>
        <h4>Create your account by entering your email address and choosing a password</h4>



        <input type="text" placeholder="First Name" name="first" value="{{data.firstName}}">
        {{#if data.firstNameError}}
        <p class="error-message">Please enter your first name.</p>
        {{/if}}


        <input type="text" placeholder="Last Name" name="last" value="{{data.lastName}}">
        {{#if data.lastNameError}}
        <p class="error-message">Please enter your last name.</p>
        {{/if}}


        <input type="text" placeholder="Email Address" name="email" value="{{data.email}}">
        
        {{#if data.emailError}}
        <p class="error-message">Please enter a valid email address.</p>
        {{/if}}

         {{#if data.emailDuplicationError}}
        <p class="error-message">The email address is already registered</p>
        {{/if}}


        <input type="password" placeholder="Password" name="password" value="{{data.password}}">
        {{#if data.passwordError}}
        <p class="error-message">Please enter your password.</p>
        {{/if}}

        <button>Sign up today</button>
    </form>

</main>